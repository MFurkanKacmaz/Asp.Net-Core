@model ProfileViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Profil</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Profil</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="~/images/@ViewBag.User.Image" alt="Profile" class="rounded-circle">
                    <h2>@ViewBag.User.FullName</h2>
                    <h3>@ViewBag.User.Job</h3>
                    <div class="social-links mt-2">
                        <a href="@ViewBag.User.Twitter" class="twitter" target="_blank"><i class="bi bi-twitter"></i></a>
                        <a href="@ViewBag.User.Facebook" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                        <a href="@ViewBag.User.Instagram" class="instagram" target="_blank"><i class="bi bi-instagram"></i></a>
                        <a href="@ViewBag.User.LinkedIn" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Genel Bakış</button>
                        </li>

                        @*      <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Profil Düzenle</button>
                        <a class="nav-link btn" data-bs-toggle="tab" asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.User.Id">Profil Düzenle</a>
                        </li> *@

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Hakkımda</h5>
                            <p class="small fst-italic">@ViewBag.About.Content</p>

                            <h5 class="card-title">Profil Detayları</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">İsim</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.User.FullName</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Meslek</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.User.Job</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Adres</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.User.Location</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Telefon</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.User.PhoneNumber</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.User.Email</div>
                            </div>

                            <a class="btn btn-sm btn-outline-primary" asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.User.Id">Profil Düzenle</a>

                        </div>


                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>

