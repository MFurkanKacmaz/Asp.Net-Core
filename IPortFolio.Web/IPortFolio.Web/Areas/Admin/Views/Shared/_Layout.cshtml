        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/images/@ViewBag.User.Image" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@ViewBag.User.FullName</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@ViewBag.User.FullName</h6>
                            <span>@ViewBag.User.Job</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-area="Admin" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-person"></i>
                                <span>Profil</span>
                            </a>
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Çıkış</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Anasayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Slider" asp-action="Index">
                    <i class="bi bi-image"></i>
                    <span>Slider</span>
                </a>
            </li><!-- End Slider Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="About" asp-action="Index">
                    <i class="bi bi-card-list"></i>
                    <span>Hakkımda</span>
                </a>
            </li><!-- End About Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Skill" asp-action="Index">
                    <i class="bi bi-bar-chart"></i>
                    <span>Yetenekler</span>
                </a>
            </li><!-- End Skill Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Resume" asp-action="Index">
                    <i class="bi bi-clock-history"></i>
                    <span>Öz Geçmiş</span>
                </a>
            </li><!-- End Resume Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Portfolio" asp-action="Index">
                    <i class="bi bi-columns"></i>
                    <span>Portfolio</span>
                </a>
            </li><!-- End Portfolio Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Service" asp-action="Index">
                    <i class="bi bi-wrench"></i>
                    <span>Hizmetler</span>
                </a>
            </li><!-- End Service Page Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        @RenderBody()

    </main><!-- End #main -->
