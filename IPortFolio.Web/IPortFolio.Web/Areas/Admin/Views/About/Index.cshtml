@model IEnumerable<AboutViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section profile">
    <div class="row">
        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">

                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">

                            <h5 class="card-title">Hakkımda Detayları</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Başlık</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.About.Title</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">İçerik</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.About.Content</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Arka Plan</div>
                                <div class="col-lg-9 col-md-8">
                                    <img class="rounded" style="width:200px;" src="~/images/@ViewBag.About.Image" alt="Resim yok" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Alt Başlık</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.About.SubTitle</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Alt İçerik</div>
                                <div class="col-lg-9 col-md-8">@ViewBag.About.SubContent</div>
                            </div>

                            <a class="btn btn-sm btn-outline-primary" asp-controller="About" asp-action="Edit" asp-route-id="@ViewBag.About.Id">Hakkımda Düzenle</a>

                        </div>


                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>
