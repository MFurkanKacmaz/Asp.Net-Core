@model IPortFolio.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section profile">
    <div class="row">
        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">

                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">

                            <h5 class="card-title">Hizmet Düzenle</h5>

                            <!-- Service Edit Form -->
                            <form asp-area="Admin" asp-controller="Service" asp-action="Edit" method="post" enctype="multipart/form-data">

                                <input asp-for="Id" type="hidden">

                                <div class="row mb-3">
                                    <label asp-for="Title" class="col-md-4 col-lg-3 col-form-label">Başlık</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Title" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Description" class="col-md-4 col-lg-3 col-form-label">Açıklama</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Description" class="form-control">
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                            <!-- End Service Edit Form -->


                        </div>


                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>

