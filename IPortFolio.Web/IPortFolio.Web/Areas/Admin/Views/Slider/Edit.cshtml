@model SliderViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="section profile">
    <div class="row">
        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">

                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">

                            <h5 class="card-title">Slider Düzenle</h5>

                            <!-- Slider Edit Form -->
                            <form asp-area="Admin" asp-controller="Slider" asp-action="Edit" method="post" enctype="multipart/form-data">

                                <input asp-for="Id" type="hidden">

                                <div class="row mb-3">
                                    <label asp-for="Image" class="col-md-4 col-lg-3 col-form-label">Slider Foto</label>
                                    <div class="col-md-8 col-lg-9">

                                        <img src="~/images/@Model.Image" alt="Slider" class="rounded" style="width:200px;">
                                        <input asp-for="UploadImage" type="file" class="form-control mt-3">
@* 
                                        <div class="pt-2">
                                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                        </div> *@
                                    </div>
                                </div>
                                <hr />
                                <div class="row mb-3">
                                    <label asp-for="Title" class="col-md-4 col-lg-3 col-form-label">Başlık</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Title" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Content" class="col-md-4 col-lg-3 col-form-label">İçerik</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Content" class="form-control">
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                            <!-- End Slider Edit Form -->


                        </div>


                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>


