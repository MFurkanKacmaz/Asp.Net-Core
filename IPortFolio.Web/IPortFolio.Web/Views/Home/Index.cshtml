@model AspNetCoreIdentityApp.Web.ViewModels.SendMailViewModel

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex flex-column justify-content-center align-items-center" style="background: url('images/@ViewBag.Slider.Image') top center;">
    <div class="hero-container" data-aos="fade-in">
        <h1>@ViewBag.Slider.Title</h1>
        <p><span class="typed" data-typed-items="@ViewBag.Slider.Content"></span></p>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container offset-1">

            <div class="section-title">
                <h2>@ViewBag.About.Title</h2>
                <div class="row">
                    <p class="col-md-10">@ViewBag.About.Content</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3" data-aos="fade-right">
                    <img src="~/images/@ViewBag.About.Image" class="img-fluid" alt="">
                </div>
                <div class="col-md-7 pt-4 pt-md-0 content" data-aos="fade-left">
                    <h3>@ViewBag.About.SubTitle</h3>
                    <p class="fst-italic">
                        @ViewBag.About.SubContent
                    </p>
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Skills Section ======= -->
