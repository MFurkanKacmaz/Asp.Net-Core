    <!-- End Skills Section -->
    <!-- ======= Resume Section ======= -->
    <section id="resume" class="resume">
        <div class="container">

            <div class="section-title">
                <h2 class=" offset-1">Öz Geçmiş</h2>
                @* <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p> *@
            </div>

            <div class="row">
                <div class="col-lg-10 offset-1" data-aos="fade-up">

                    @foreach (var resume in ViewBag.Resumes)
                    {

                        <div class="resume-item">
                            <h4>@resume.Department</h4>
                            <h5>@resume.StartYear.Year - @resume.EndYear.Year</h5>
                            <p><em>@resume.Organisation</em></p>
                            <p>@resume.Content</p>
                        </div>
                    }
                </div>

            </div>

        </div>
    </section><!-- End Resume Section -->
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Portfolio</h2>
                @* <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p> *@
            </div>

            <div class="row" data-aos="fade-up">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">HEPSİ</li>
                        <li data-filter=".filter-app">Uygulama</li>
                        <li data-filter=".filter-card">Kart</li>
                        <li data-filter=".filter-web">Web</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">

                @foreach (var portfolio in @ViewBag.Portfolios)
                {

                    <div class="col-lg-4 col-md-6 portfolio-item filter-@portfolio.Category">
                        <div class="portfolio-wrap">
                            <img src="~/images/@portfolio.Image" style="width:100%; height:300px; object-fit:cover;" class="img-fluid" alt="">
                            <div class="portfolio-links">
                                <a href="~/images/@portfolio.Image" data-gallery="portfolioGallery" class="portfolio-lightbox w-100"><i class="bx bx-plus"></i></a>

                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </section><!-- End Portfolio Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Hizmetler</h2>
                @* <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p> *@
            </div>

            <div class="row">

                @foreach (var service in ViewBag.Services)
                {

                    <div class="col-lg-4 col-md-6 icon-box" data-aos="fade-up">
                        <div class="icon"><i class="bi bi-check-lg"></i></div>
                        <h4 class="title"><a href="#services">@service.Title</a></h4>
                        <p class="description">@service.Description</p>
                    </div>

                }

            </div>
        </div>
    </section><!-- End Services Section -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
        <div class="container">

            <div class="section-title">
                <h2>İletişim</h2>
                @* <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p> *@
            </div>

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Konum:</h4>
                            <p>@ViewBag.User.Location</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>@ViewBag.User.Email</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Telefon:</h4>
                            <p>@ViewBag.User.PhoneNumber</p>
                        </div>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.627785455328!2d28.978507985359457!3d41.01151939747831!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab9b8afa5f833%3A0x15aa1943c3015300!2zVG9wa2FwxLEgU2FyYXnEsSBNw7x6ZXNp!5e0!3m2!1str!2str!4v1692092556646!5m2!1str!2str" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                </div>

                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form asp-controller="Home" asp-action="Index" method="post" class="home-form">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Name">Ad</label>
                                <input asp-for="Name" class="form-control" autocomplete="off" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject">Konu</label>
                            <input asp-for="Subject" class="form-control" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message">Mesaj</label>
                            <textarea asp-for="Message" class="form-control" autocomplete="off" rows="10" required></textarea>
                        </div>
                        @*  <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div> *@
                        <div class="text-center"><button type="submit">Gönder</button></div>
                    </form>
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->